<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <fragment
        android:id="@+id/nav_host_fragment_content_note"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:defaultNavHost="true"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editTextTitle_contentNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:hint="Title of note"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textSize="40sp"
                android:textStyle="bold"
                tools:text="@string/sampleTextInNoteTitle" />

            <EditText
                android:id="@+id/editTextContent_contentNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:hint="Here write your ideas and notes"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textSize="20sp"
                tools:text="@string/sampleTextInNoteContent" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textViewTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFEAB5"
        android:backgroundTint="#FFCCCC"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        android:singleLine="false"
        app:layout_constraintBottom_toTopOf="@id/toolbarAlignText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Created: 14 Dec 18:16" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAlignText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toTopOf="@id/toolbarTextTools"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/buttonAlignLeft"
                android:layout_width="@dimen/customizing_item_dimen"
                android:layout_height="@dimen/customizing_item_dimen"
                android:layout_weight="1"
                android:background="@drawable/ic_align_left" />

            <ImageView
                android:id="@+id/buttonAlignCenter"
                android:layout_width="@dimen/customizing_item_dimen"
                android:layout_height="@dimen/customizing_item_dimen"
                android:layout_weight="1"
                android:background="@drawable/ic_align_center" />

            <ImageView
                android:id="@+id/buttonAlignRight"
                android:layout_width="@dimen/customizing_item_dimen"
                android:layout_height="@dimen/customizing_item_dimen"
                android:layout_weight="1"
                android:background="@drawable/ic_align_right" />

            <ImageView
                android:id="@+id/buttonAlignJustify"
                android:layout_width="@dimen/customizing_item_dimen"
                android:layout_height="@dimen/customizing_item_dimen"
                android:layout_weight="1"
                android:background="@drawable/ic_align_justify" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarTextTools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewBold"
                android:layout_width="@dimen/customizing_item_dimen"
                android:layout_height="@dimen/customizing_item_dimen"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_bold" />

            <ImageView
                android:id="@+id/imageViewCursive"
                android:layout_width="@dimen/customizing_item_dimen"
                android:layout_height="@dimen/customizing_item_dimen"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_cursive" />

            <ImageView
                android:id="@+id/imageViewUnderline"
                android:layout_width="@dimen/customizing_item_dimen"
                android:layout_height="@dimen/customizing_item_dimen"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_underline" />

            <ImageView
                android:id="@+id/imageViewAlign"
                android:layout_width="@dimen/customizing_item_dimen"
                android:layout_height="@dimen/customizing_item_dimen"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_align_center" />

            <ImageView
                android:id="@+id/imageViewListNumbered"
                android:layout_width="@dimen/customizing_item_dimen"
                android:layout_height="@dimen/customizing_item_dimen"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_list_numbered" />

            <ImageView
                android:id="@+id/imageViewListBulleted"
                android:layout_width="@dimen/customizing_item_dimen"
                android:layout_height="@dimen/customizing_item_dimen"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_list_bulleted" />

            <ImageView
                android:id="@+id/imageViewFontSize"
                android:layout_width="60dp"
                android:layout_height="@dimen/customizing_item_dimen"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="25"
                android:textSize="12sp"
                android:tooltipText="25" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>